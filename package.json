{
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "spago install",
    "compile-css": "lessc dist/less/default.less dist/default.css",
    "compile-css-watch": "nodemon --watch dist/less/* --exec 'npm run compile-css'",
    "build": "spago bundle",
    "build-watch": "fd . -e purs -e js | entr -s 'npm run build'",
    "build-prod": "purs-backend-es build && purs-backend-es bundle-app --no-build",
    "test": "spago test",
    "test-watch": "fd . -e purs -e js | entr -s 'npm run test'"
  },
  "devDependencies": {
    "esbuild": "^0.18.15",
    "less": "^4.2.0",
    "purescript": "^0.15.15",
    "purs-backend-es": "^1.4.2",
    "spago": "next"
  },
  "dependencies": {
    "rough-notation": "^0.5.1"
  }
}
